@model IEnumerable<Mcdonald.Model.Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Product Order</h1>
<div class="col-md-12">
    <div class="row"></div>
    <div class="row">
        <form method="post" asp-action="Index" >
            <div class="form-group">               
                <ul>
                    @foreach (var Product in Model)
                    {
                    <li>                      
                        <div>
                            <input class="k-checkbox" name="productIds" value="@Product.ProdId" type="checkbox" id="@Product.ProdId" />
                            <label class="k-checkbox-label" for="@Product.ProdId">@Product.ProdName</label>
                        </div>
                    </li>
                    }
                </ul>
               
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="row">
        @if (ViewBag.BillGenerate != null)
        {
            <h1>Your Total bill is $@ViewBag.BillGenerate</h1>
        }
    </div>
</div>


